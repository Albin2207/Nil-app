rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      // Only authenticated users can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
      // Allow authenticated users to update ONLY subscribersCount field (for subscribe/unsubscribe)
      allow update: if request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['subscribersCount']);
      // Only the user can delete their own profile
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Videos collection
    match /videos/{videoId} {
      // Anyone can read videos
      allow read: if true;
      // Allow anyone to create (supports both manual & user uploads)
      allow create: if true;
      // Allow anyone to update (for likes, views, comments count)
      allow update: if true;
      // Delete: Only owner if uploadedBy exists, otherwise any auth user can manage
      allow delete: if request.auth != null && 
        (!resource.data.keys().hasAny(['uploadedBy']) || 
         request.auth.uid == resource.data.uploadedBy);
      
      // Comments subcollection
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;
        // Anyone can create comments
        allow create: if true;
        // Anyone can update (for likes/dislikes)
        allow update: if true;
        // Delete: Only owner if userId exists, otherwise any auth user
        allow delete: if request.auth != null && 
          (!resource.data.keys().hasAny(['userId']) || 
           request.auth.uid == resource.data.userId);
      }
    }
    
    // Shorts collection
    match /shorts/{shortId} {
      // Anyone can read shorts
      allow read: if true;
      // Allow anyone to create (supports both manual & user uploads)
      allow create: if true;
      // Allow anyone to update (for likes, views, comments count)
      allow update: if true;
      // Delete: Only owner if uploadedBy exists, otherwise any auth user can manage
      allow delete: if request.auth != null && 
        (!resource.data.keys().hasAny(['uploadedBy']) || 
         request.auth.uid == resource.data.uploadedBy);
      
      // Shorts comments subcollection
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;
        // Anyone can create comments
        allow create: if true;
        // Anyone can update (for likes/dislikes)
        allow update: if true;
        // Delete: Only owner if userId exists, otherwise any auth user
        allow delete: if request.auth != null && 
          (!resource.data.keys().hasAny(['userId']) || 
           request.auth.uid == resource.data.userId);
      }
    }
    
    // Subscriptions collection
    match /subscriptions/{subscriptionId} {
      // Anyone can read subscriptions (to check if user is subscribed)
      allow read: if true;
      // Only authenticated users can create subscriptions
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      // Only the subscription owner can delete
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // No updates allowed (delete and recreate instead)
      allow update: if false;
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Only authenticated users can read (for moderation panel)
      allow read: if request.auth != null;
      // Only authenticated users can create reports
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.reporterId;
      // Allow authenticated users to update status (for moderation)
      allow update: if request.auth != null;
      // Allow authenticated users to delete (for moderation)
      allow delete: if request.auth != null;
    }
    
    // Watch History collection
    match /watchHistory/{watchHistoryId} {
      // Users can only read their own watch history
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Users can only create their own watch history
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      // Users can only update their own watch history
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Users can only delete their own watch history
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }

    // Watch Later collection
    match /watchLater/{watchLaterId} {
      // Users can only read their own watch later
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Users can only create their own watch later
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      // Users can only update their own watch later
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Users can only delete their own watch later
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // User subcollections for content preferences
    match /users/{userId}/notInterested/{videoId} {
      // Users can only read their own not interested list
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can only create their own not interested entries
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can only delete their own not interested entries
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/blockedChannels/{channelId} {
      // Users can only read their own blocked channels list
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can only create their own blocked channel entries
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can only delete their own blocked channel entries
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notifications collection (global)
    match /notifications/{notificationId} {
      // Anyone can read notifications
      allow read: if true;
      // Anyone can create notifications (for upload notifications)
      allow create: if true;
      // Users can update their own read status
      allow update: if request.auth != null;
      // Only authenticated users can delete
      allow delete: if request.auth != null;
    }
    
    // User notifications subcollection
    match /users/{userId}/notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if request.auth != null && request.auth.uid == userId;
      // Anyone can create notifications for users (for upload notifications)
      allow create: if true;
      // Users can only update their own notifications (mark as read)
      allow update: if request.auth != null && request.auth.uid == userId;
      // Users can only delete their own notifications
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Image posts collection
    match /image_posts/{imagePostId} {
      // Anyone can read image posts
      allow read: if true;
      // Only authenticated users can create image posts
      allow create: if request.auth != null;
      // Users can update their own image posts OR anyone can update likes/dislikes
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.uploadedBy ||
        (request.resource.data.keys().hasOnly(['likes', 'dislikes']) && 
         request.resource.data.likes is int && 
         request.resource.data.dislikes is int)
      );
      // Users can delete their own image posts
      allow delete: if request.auth != null && request.auth.uid == resource.data.uploadedBy;
      
      // Image post comments subcollection
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;
        // Anyone can create comments
        allow create: if true;
        // Anyone can update (for likes/dislikes)
        allow update: if true;
        // Delete: Only owner if userId exists, otherwise any auth user
        allow delete: if request.auth != null && 
          (!resource.data.keys().hasAny(['userId']) || 
           request.auth.uid == resource.data.userId);
      }
    }
  }
}
