rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Videos collection
    match /videos/{videoId} {
      allow read: if true;
      allow write: if true; // Change this to require authentication later
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if true;
      }
    }
    
    // Shorts collection
    match /shorts/{shortId} {
      allow read: if true;
      allow write: if true; // Change this to require authentication later
    }
    
    // Allow other collections
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 11, 14);
    }
  }
}
